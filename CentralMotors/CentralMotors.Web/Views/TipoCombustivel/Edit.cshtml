@model CentralMotors.Models.TipoCombustivel

@{
    ViewData["Title"] = "Edit";
}
<body style="background:url(/IMG/logo-virada.png) no-repeat fixed center center; background-size: 20%;margin-top:120px;">

<h1>Editar Tipo de Combustível</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoCombustivelId" class="control-label">ID do Tipo de Combustível</label>
                <input asp-for="TipoCombustivelId" class="form-control" />
                <span asp-validation-for="TipoCombustivelId" class="text-danger"></span>
                </div><br />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                    <a asp-action="Index" style="font-size: 15px; text-decoration: none; color: #007bff; border: 2px solid #007bff; border-radius: 8px; padding: 5px; display: inline-block;">Retornar</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>