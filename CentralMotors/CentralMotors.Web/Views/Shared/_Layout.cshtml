<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CentralMotors.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CentralMotors.Web.styles.css" asp-append-version="true" />
    

</head>
<body>
    <header>
        <nav style="border-color:blue !important; background: linear-gradient(135deg, #ffffff 70%,rgb(7,65,173) 30%)!important" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/IMG/projeto-removebg-preview.png" class="img-fluid" style="width: 250px; height: auto;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="color: rgb(18,73,177) !important" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        
                    </ul>
                </div>

                <ul class="navbar-nav flex-grow-2">
                    <li class="nav-item dropdown" style="left=100%">
                        <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Área de Controle
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item text-dark" asp-controller="Veiculo"
                                   asp-action="Index">Veículos</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item text-dark" asp-controller="Cor"
                                   asp-action="Index">Cores</a>
                            </li>
                            <li>
                                <a class="dropdown-item text-dark" asp-controller="Fabricante"
                                   asp-action="Index">Fabricantes</a>
                            </li>
                            <li>
                                <a class="dropdown-item text-dark" asp-controller="Modelo"
                                   asp-action="Index">Modelos de Veículos</a>
                            </li>
                            <li>
                                <a class="dropdown-item text-dark" asp-controller="TipoCombustivel"
                                   asp-action="Index">Tipos de Combustíveis</a>
                            </li>
                            <li>
                                <a class="dropdown-item text-dark" asp-controller="TipoTransmissao"
                                   asp-action="Index">Tipos de Transmissão</a>
                            </li>
                            <li>
                                <a class="dropdown-item text-dark" asp-controller="Tipo"
                                   asp-action="Index">Tipos de Veículos</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-1 footer border-top" style="background-color:rgba(192, 192, 192, 1.20);">
        <div class="container"><p class="m-0 text-center text-dark" >&copy;Carlos Cunha </p></div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
