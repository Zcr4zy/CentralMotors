@model CentralMotors.Models.Modelo

@{
    ViewData["Title"] = "Create";
}
<body style="background:url(/IMG/logo-virada.png) no-repeat fixed center center; background-size: 20%;margin-top:120px;">

<h1>Adicionar Modelo de Veículo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ModeloId" class="control-label">ID do Modelo</label>
                <input asp-for="ModeloId" class="form-control" />
                <span asp-validation-for="ModeloId" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
                </div><br />
            <div class="form-group">
                <label asp-for="FabricanteId" class="control-label">Fabricante</label>
                <select asp-for="FabricanteId" class="form-select" asp-items="ViewBag.Fabricantes"></select>
                <span asp-validation-for="FabricanteId" class="text-danger"></span>
                </div><br /><br />
                <div class="form-group">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index" style="font-size: 15px; text-decoration: none; color: #007bff; border: 2px solid #007bff; border-radius: 8px; padding: 5px; display: inline-block;">Retornar</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>